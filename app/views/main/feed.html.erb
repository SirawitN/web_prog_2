<h1>Hello, User</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>

<p>
  <strong>Address:</strong>
  <%= @user.address %>
</p>

<p>
  <strong>Postal_Code:</strong>
  <%= @user.postal_code %>
</p>

<% if @user.readPosts.any? %>

  <table>
    <thead>
      <tr>
        <th>MSG</th>
        <th>Time</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.readPosts.each do |post| %>
        <tr>
          <td><%= post.msg %></td>
          <td><%= post.updated_at %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>  <!-- <<------------  -->
          <td><%= link_to 'Delete', post, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

<% end %>



<%= link_to 'Edit account', edit_user_path(@user) %> |
<%= link_to 'Create a new post', new_post_path(user_id: @user.id) %> |
<%= link_to 'Log out', main_path %> 

